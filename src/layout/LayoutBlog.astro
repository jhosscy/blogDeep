---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400&family=Source+Sans+Pro:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <!-- Header Section -->
  <header>
    <a href="/" class="home-button">
      <svg width="24" height="24" viewBox="0 0 24 24">
        <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"></path>
      </svg>
      Home
    </a>
    <h1 class="blog-title">Deep Research Blog</h1>
  </header>

  <!-- Main Content Section -->
  <main>
    <slot />
  </main>
</body>
</html>

<style is:global>
  /* CSS Variables for Theming */
  :root {
    --primary-color: #ff7b00;
    --primary-light: #ffab58;
    --primary-dark: #cc6200;
    --text-color: #333333;
    --bg-color: #ffffff;
    --card-bg: #f8f8f8;
    --card-shadow: rgba(0, 0, 0, 0.1);
    --header-bg: #ffffff;
    --tag-border: #333333;
    --code-bg: #f4f4f4;
    --code-border: #ddd;
    --blockquote-border: #cccccc;
    --link-bg: #f3f3f3;
    --heading-font: 'Source Sans Pro', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    --body-font: 'Merriweather', Georgia, 'Times New Roman', Times, serif;
    --math-bg: #f9f9f9;
  }

  /* Dark Mode */
  @media (prefers-color-scheme: dark) {
    :root {
      --primary-color: #ff7b00;
      --primary-light: #ffab58;
      --primary-dark: #cc6200;
      --text-color: #e0e0e0;
      --bg-color: #121212;
      --card-bg: #1e1e1e;
      --card-shadow: rgba(0, 0, 0, 0.3);
      --header-bg: #1a1a1a;
      --tag-border: #e0e0e0;
      --code-bg: #2a2a2a;
      --code-border: #444;
      --blockquote-border: #555555;
      --link-bg: #2c2c2c;
      --math-bg: #1d1d1d;
    }
  }

  /* Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--body-font);
    background-color: var(--bg-color);
    color: var(--text-color);
    line-height: 1.7;
    transition: background-color 0.3s, color 0.3s;
  }

  h1, h2, h3, h4, h5, h6,
  .blog-title,
  .home-button {
    font-family: var(--heading-font);
  }

  /* Header Styles */
  header {
    background-color: var(--header-bg);
    padding: 1rem;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .home-button {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    color: var(--primary-color);
    font-weight: 600;
    text-decoration: none;
  }

  .home-button svg {
    margin-right: 0.5rem;
    fill: var(--primary-color);
  }

  .blog-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--primary-color);
  }

  /* Main Content Styles */
  main {
    max-width: 840px;
    margin: 0 auto;
    padding: 2rem 1rem 4rem 1rem;
    background-color: var(--bg-color);
  }
</style>
